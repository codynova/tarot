{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [ "esnext" ],
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "importsNotUsedAsValues": "preserve"
    },
    "include": [
        "../../../src/**/*.ts",
        "../../../src/**/*.tsx"
    ]
}
